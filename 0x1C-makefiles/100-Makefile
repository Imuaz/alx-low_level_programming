#Useful Makefile with executable school, variables CC, SRC, OBJ,NAME, RM, CFLAGS and rules all, clean, oclean, fclean, re.

CC = gcc

SRC = main.c school.c

NAME = school

OBJ = $(SRC:.c=.o)

CFLAGS = -Wall -Werror -Wextra -pedantic

RM = /bin/rm -f

.PHONY: all clean oclean fclean re

all: m.h $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) -f *~ $(NAME)

oclean:
	$(RM) -f $(OBJ)

fclean: clean oclean

re: oclean all

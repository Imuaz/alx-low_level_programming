#Useful Makefile with executable school, variables CC, SRC, OBJ,NAME, RM, CFLAGS and rules all, clean, oclean, fclean, re.
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: m.h $(NAME)

$(NAME): $(SRC)
$(CC) $(CFLAGS) $^ -o $@

clean:
$(RM) *~ $(NAME) *.o

oclean:
$(RM) $(OBJ)

fclean: clean oclean
$(RM) $(NAME)

re: fclean all

.PHONY: all clean oclean fclean re
